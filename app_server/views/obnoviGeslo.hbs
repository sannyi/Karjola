 <div class="row m-0 mt-2">
          {{>sidebar}}
        <main class="col-sm-12 col-md-9 mt-3">
            <div class="content bg-dark p-3">
                    <h2 class="formtitle">PONASTAVITEV GESLA</h2>
                    <br/>
                    <form method="POST" action="/uporabniki/obnoviGeslo/posljiZahtevoZaObnovo" role="form">
                        <div class="form-group col-md-12" id="enterEmailForgetPassword">
                          <label for="exampleInputEmail1">E-POŠTA <em class="required">*</em></label>
                          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Vnesi e-poštni naslov za ponastavitev gesla" required name="ePosta" autocomplete="on"
                          pattern="[a-z]{2}[0-9]{4}@student.uni-lj.si" title="Vnesi e-poštni naslov, ki si ga prejel s strani Univerze v Ljubljani. Primer: jn0000@student.uni-lj.si">
                          <br/>
                          <button type="submit" id="submit" class="btn btn-primary ">Ponastavi geslo!</button>
                        </div>
                        <div class="alerts col-md-12">
                            <div class="alert alert-danger alert-dismissible fade show col-md-12" role="alert">
                                <strong id="danger-strong">Zahtevana vnosna polja niso izpolnjena!</strong><span id="danger-navadno"></span>
                            </div>
                            <div class="alert alert-success alert-dismissible fade show " role="alert">
                                <strong id="success-strong">Navodila za ponastavitev gesla so bila poslana!</strong></strong><span id="success-navadno"></span>
                            </div>
                        </div>
                    </form>
            </div>
        </main>
      </div>
      <script src="/public/js/forms.js"></script>